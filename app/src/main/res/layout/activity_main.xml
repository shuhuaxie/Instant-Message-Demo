<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:id="@+id/login_ll">
  <TextView
      android:id="@+id/login_1_tv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:background="#3f0000ff"
      android:padding="10dp"
      android:text="Login as shuhua"
      android:textSize="20dp"/>
  <TextView
      android:id="@+id/login_2_tv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:background="#3f0000ff"
      android:padding="10dp"
      android:text="Login as easemob"
      android:textSize="20dp"/>
  <TextView
      android:id="@+id/login_3_tv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:background="#3f0000ff"
      android:padding="10dp"
      android:text="Login as Obama"
      android:textSize="20dp"/>
    </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="gone"
      android:id="@+id/normal_ll">

    <TextView
        android:id="@+id/chat_list_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#3f0000ff"
        android:padding="10dp"
        android:text="Chat list"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/chat_shuahua_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#3f0000ff"
        android:padding="10dp"
        android:text="Start chat to shuhua"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/chat_easemob_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#3f0000ff"
        android:padding="10dp"
        android:text="Start chat to easemob"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/chat_obama_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#3f0000ff"
        android:padding="10dp"
        android:text="Start chat to Obama"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/logout_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#3f0000ff"
        android:padding="10dp"
        android:text="Logout"
        android:textSize="20dp"/>
  </LinearLayout>
</LinearLayout>
